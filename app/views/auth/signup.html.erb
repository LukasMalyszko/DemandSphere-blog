<h1 class="font-bold ">Sign Up</h1>
<%= form_with url: signup_path, local: true, method: :post do%>
  <div class="space-y-2">
    <%= label_tag "email" %>
    <%= email_field_tag "email", nil, class:"block flex-1 rounded-md border-1 bg-transparent py-1.5 pl-1 text-gray-900 placeholder:text-gray-400 focus:ring-0 sm:text-sm sm:leading-6" %>
    <%= label_tag "password" %>
    <%= password_field_tag "password", nil, class:"block flex-1 rounded-md border-1 bg-transparent py-1.5 pl-1 text-gray-900 placeholder:text-gray-400 focus:ring-0 sm:text-sm sm:leading-6" %>
    <%= submit_tag "Sign Up", class:"bg-gray-900 text-white rounded-md px-3 py-2 text-sm font-medium " %>
  </div>
<% end %>
